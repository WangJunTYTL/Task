<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>

    <appender name="console-appender" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss,SSS\} %-5p]  {%c:%L}-%m%n"/>
        </layout>
    </appender>

    <appender name="CoalescingStatistics" class="org.perf4j.log4j.AsyncCoalescingStatisticsAppender">
        <param name="TimeSlice" value="60000"/>
        <!--<appender-ref ref="ExecutionSlow"></appender-ref>-->
    </appender>

    <appender name="AKKA_STDOUT" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <!--<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss\} %-5p]  [%c:%L] %m%n"/>-->
            <!--<param name="ConversionPattern" value="akka-%d %-5p %X{sourceThread} %X{akkaSource}- %m%n"/>-->
            <param name="ConversionPattern" value="[%d %-5p]  {%X{akkaSource}}-%m%n"/>
            <!--<param name="ConversionPattern" value="akka-%d %-5p %l %X{akkaSource} - %m%n"/>-->
        </layout>
    </appender>


    <!--log config start-->
    <logger name="org.perf4j.TimingLogger" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="CoalescingStatistics"/>
    </logger>

    <logger name="redis.proxy" additivity="false">
        <level value="error"/>
    </logger>

    <logger name="cn.edaijia.service.redis.cglib.UsageTrackingImp" additivity="false">
        <level value="error"/>
    </logger>

    <logger name="cn.edaijia.task.executor.dispatch.actor" additivity="false">
        <level value="debug"></level>
        <appender-ref ref="AKKA_STDOUT"></appender-ref>
    </logger>

    <logger name="cn.edaijia.task.executor.impl.actor.WorkerActor" additivity="false">
        <level value="debug"></level>
        <appender-ref ref="AKKA_STDOUT"></appender-ref>
    </logger>

    <logger name="cn.edaijia.task.executor.impl.actor.TaskRouterActor" additivity="false">
        <level value="debug"></level>
        <appender-ref ref="AKKA_STDOUT"></appender-ref>
    </logger>


    <logger name="com.peaceful.common" additivity="false">
        <level value="error"/>
    </logger>
    <root>
        <priority value="debug"/>
        <appender-ref ref="console-appender"/>
    </root>
</log4j:configuration>